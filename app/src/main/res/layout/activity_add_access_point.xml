<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp"
            android:fontFamily="@font/noto">

            <Button
                android:id="@+id/bn_ap_scan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/noto"
                android:text="Select AP" />

            <EditText
                android:id="@+id/et_ap_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Please Type SSID"
                android:inputType="text"
                android:lines="1"
                android:maxLength="50"
                android:fontFamily="@font/noto"/>

            <EditText
                android:id="@+id/et_ap_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="Description"
                android:inputType="text"
                android:lines="3"
                android:maxLength="250"
                android:fontFamily="@font/noto"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/noto"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_ap_x"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:fontFamily="@font/noto"
                    android:text="0"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="10" />

                <EditText
                    android:id="@+id/et_ap_y"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:text="0"
                    android:inputType="numberDecimal"
                    android:lines="1"
                    android:maxLength="10"
                    android:fontFamily="@font/noto"/>

                <EditText
                    android:id="@+id/et_ap_mac"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="MAC"
                    android:inputType="text"
                    android:lines="1"
                    android:maxLength="50"
                    android:fontFamily="@font/noto"/>

            </LinearLayout>



        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/bn_ap_create"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto"
        android:text="Register AP" />
</LinearLayout>