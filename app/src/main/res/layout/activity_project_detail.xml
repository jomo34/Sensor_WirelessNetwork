<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fontFamily="@font/noto"
    android:padding="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/noto"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_add_ap"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/noto"
            android:layout_weight="1"
            android:text="Add APs" />

        <Button
            android:id="@+id/btn_add_rp"
            android:layout_width="0dp"
            android:fontFamily="@font/noto"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Location" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/noto"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_ap_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/noto"
            android:gravity="center_horizontal"
            android:text="Access Point:0" />

        <TextView
            android:id="@+id/tv_rp_count"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="@font/noto"
            android:gravity="center_horizontal"
            android:text="Reference Point:0" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_points"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fontFamily="@font/noto"
        android:layout_marginTop="10dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/btn_locate_me"
        android:fontFamily="@font/noto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Find Current Location" />

</LinearLayout>